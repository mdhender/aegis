all += cklinlen/.checked;

cklinlen_obj =
    [fromto cklinlen/%0%.c [arch]/cklinlen/%0%.o
	[match_mask cklinlen/%0%.c [source_files]]
    ]
    [arch]/common/arglex.o
    [arch]/common/error.o
    [arch]/common/exeext.o
    [arch]/common/libdir.o
    [arch]/common/mem.o
    [arch]/common/mprintf.o
    [arch]/common/progname.o
    [arch]/common/str/format.o
    [arch]/common/str.o
    [arch]/common/trace.o
    ;

cklinlen/.checked: [arch]/bin/cklinlen [change_files]
{
    [resolve [arch]/bin/cklinlen]
	['if' [not [in [collect hostname] osprey]] 'then' -w ]
	[resolve [sort [change_files]]]
	;
    date > [target]
	set silent;
}
