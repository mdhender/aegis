columns({ width = 1000; });

auto ps;
ps = project[project_name()].state.branch;

auto who_am_i;
who_am_i = passwd[getuid()].pw_name;
print("set who_am_i " ## who_am_i);


print("set developer_list { \\");
auto name, long_name;
for (name in ps.developer)
    print("\"" ## quote_tcl(name) ## "\" \\");
if (count(keys(project)) == 0)
	print("\t\"None\" \\");
print("}");

print("set developer_fullname_list { \\");
for (name in ps.developer)
{
    try { long_name = passwd[name].pw_comment; }
    catch (long_name) { long_name = name; }
    print("\"" ## quote_tcl(long_name) ## "\" \\");
}
if (count(keys(project)) == 0)
	print("\t\"None\" \\");
print("}");
