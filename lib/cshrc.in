alias	aedbu	'aegis -dbu \!* -v'
alias	aede	'aegis -de \!* -v'
alias	aedeu	'aegis -deu \!* -v'
alias aedless \
    'less `find . -type f \( -name "*,D" -o -name ".*,D" \) -print | sort`'
alias aedmore	\
    'more `find . -type f \( -name "*,D" -o -name ".*,D" \) -print | sort`'
alias	aedn	'aegis -dn \!* -v'
alias	aeib	'aegis -ib \!* -v'
