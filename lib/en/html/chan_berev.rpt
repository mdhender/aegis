columns({width = 1000; });
print("Content-Type: text/html");
print("");
print("<html><head><title>");
auto pn;
pn = project_name();
print("Project " ## pn ## " Changes"); 
print("</title></head><body><h1><center>");
print("Project ``" ## pn ## "'',<br>");
print("List of Changes<br>");
print("Being Reviewed"); 
print("</center></h1>");
print("<center><table>");

print("<tr><th>Change</th><th>State</th><th>Description</th></tr>");

auto script_name;
script_name = getenv("SCRIPT_NAME");
if (script_name == "")
	script_name = "http://localhost/cgi-bin/aegis.cgi";

auto ps, cn, total;
ps = project[pn].state.branch;
total = 0;
for (cn in sort(keys(ps.change)))
{
	auto cs;
	cs = ps.change[cn];
	if (cs.state != being_reviewed)
		continue;
	++total;
	print("<tr><td valign=top align=right>");
	auto href, junk;
	href = "file@chan_menu+project@" ## pn ## "+change@" ## cn;
	try
	{
		if (count(keys(cs.branch)))
			href = "file@proj_menu+project@" ## pn ## "." ## cn;
	}
	catch (junk)
		;
	href = script_name ## "?" ## href;
	print("<a href=\"" ## href ## "\">" ## cn ## "</a>");
	print("</td><td valign=top>");
	print(cs.state);
	print("</td><td valign=top>");
	auto part;
	for (part in wrap_html(cs.brief_description, 80))
		print(part);
	print("</td></tr>");
}
print("</table></center>");
print("Listed " ## total ## " changes.");
print("<hr>A similar report may be obtained from the command line, with");
print("<blockquote><tt>aeifail -l -p " ## pn ## "</tt></blockquote>");
print("<hr>");
print("This page was generated " ## now() ## ".");
print("</body></html>");
