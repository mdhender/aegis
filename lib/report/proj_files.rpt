auto p, ps, j;
p = project[project_name()];
title("The Project File Report", sprintf("Project \"%s\"", p.name));
ps = p.state.src;
if (terse())
{
	auto cf;
	cf = [ /* empty */ ];
	if (change_number_set())
	{
		auto cs;
		cs = p.state.change[change_number()];
		for (j in cs.src)
			cf ##= j.file_name;
	}
	columns({ name = "File Name\n----------"; right = 0; });
	for (j in ps)
	{
		if
		(
			!j.deleted_by
		&&
			!j.about_to_be_created_by
		&&
			!(j.file_name in cf)
		)
			print(j.file_name);
	}
}
else
{
	columns
	(
		{ name = "Type\n------"; },
		{ name = "Edit\n------"; },
		{ name = "File Name\n-----------"; right = 0; },
		{ left = 18; right = 0; },
		{ left = 18; right = 0; }
	);
	for (j in ps)
	{
		print
		(
			j.usage,
			j.edit_number,
			j.file_name,
			(
				j.deleted_by
			?
				sprintf("Deleted by change %d.", j.deleted_by)
			:
				""
			),
			(
				j.about_to_be_created_by
			?
				sprintf
				(
					"About to be created by change %d.",
					j.about_to_be_created_by
				)
			:
				""
			)
		);
	}
}
