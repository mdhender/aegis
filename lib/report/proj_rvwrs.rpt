auto p, ps, name;
p = project[project_name()];
title("The Project Reviewer Report", sprintf("Project \"%s\"", p.name));
ps = p.state.branch;
if (terse())
{
	columns({ name = "Login\n--------"; right = 0; });
	for (name in sort(ps.reviewer))
		print(name);
}
else
{
	columns
	(
		{ name = "Login\n--------"; width = 8; },
		{ name = "Full Name\n-----------"; right = 0; padding = 2; }
	);
	for (name in sort(ps.reviewer))
		print(name, passwd[name].pw_comment);
}
